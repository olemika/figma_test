<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.5dp"
            android:layout_marginTop="56.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon_up_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_icon_up_to_back"
                />

            <TextView
                android:layout_marginLeft="112dp"
                android:layout_marginRight="136dp"
                android:textSize="21dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_of_collection"
                />

        </LinearLayout>

        <View
            android:id="@+id/separate_line"
            android:layout_width="350dp"
            android:background="#D7D8D9"
            android:layout_height="0.33dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/top_panel">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/for_collect_bnn"
            android:layout_width="351dp"
            android:layout_height="62dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/banner">
            <ImageView
                android:id="@+id/target_icon1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_target"/>
            <TextView
                android:id="@+id/target_collect_tv"
                android:layout_width="112dp"
                android:layout_height="20dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:text="Целевой сбор"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/target_icon1"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/target_icon1"
                android:text="@string/when_goal_exist"
                android:layout_below="@id/target_collect_tv"
                android:layout_marginTop="2dp"/>
            <ImageView
                android:layout_marginRight="13dp"
                android:layout_marginTop="22.75dp"
                android:layout_alignParentRight="true"
                android:id="@+id/icon_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic___icon_to_right"/>
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/for_regular_collect_bnn"
            android:layout_width="351dp"
            android:layout_height="62dp"
            android:background="@drawable/banner">
            <ImageView
                android:id="@+id/calendar_icon1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic___icon_calendar"/>
            <TextView
                android:id="@+id/regular_collect_tv"
                android:layout_width="138dp"
                android:layout_height="20dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:text="Регулярный сбор"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/calendar_icon1"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/description_regular"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/calendar_icon1"
                android:text="Если помощь нужна ежемесячно"
                android:layout_below="@id/regular_collect_tv"
                android:layout_marginTop="2dp"/>
            <ImageView
                android:layout_marginRight="13dp"
                android:layout_marginTop="22.75dp"
                android:layout_alignParentRight="true"
                android:id="@+id/icon_right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic___icon_to_right"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>